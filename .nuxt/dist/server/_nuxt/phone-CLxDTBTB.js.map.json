{"file":"phone-CLxDTBTB.js","mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;AAkDc,QAAY,EAAE;AACZ,QAAa,KAAK;AACb,QAAa,KAAK;AAExB,cAAU;;;;;;;;;;;;","names":[],"sources":["../../../../pages/profile/edit/phone.vue"],"sourcesContent":["<template>\r\n  <!-- <div class=\"edit_phone__w\">\r\n    <div class=\"edit-phone\">\r\n      <div class=\"close\">\r\n        <Icon name=\"simple-line-icons:close\" size=\"30\" />\r\n      </div>\r\n      <div class=\"edit_phone__head\">\r\n        <h3>Редактирование</h3>\r\n        <p v-if=\"!phoneChanged && !showOtp\">\r\n          Укажите новый номер телефона, на него будет выслан СМС-код для\r\n          подтверждения\r\n        </p>\r\n      </div>\r\n      <div class=\"edit_phone\" v-if=\"!phoneChanged && !showOtp\">\r\n        <div class=\"edit_input\">\r\n          <p>Телефон</p>\r\n          <InputPhone v-model=\"phone\" placeholder=\"+7 (999) 999-99-99\" />\r\n        </div>\r\n        <div class=\"edit_btn\">\r\n          <DefaultBtn\r\n            name=\"Подтвердить номер\"\r\n            type=\"primary\"\r\n            color=\"brown\"\r\n            size=\"small\"\r\n            @click=\"handleConfirm\"\r\n          />\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <otpPhone v-if=\"showOtp && !phoneChanged\" @onNext=\"handleOtpSuccess\" />\r\n    <div class=\"edit_phone__end\" v-if=\"phoneChanged\">\r\n      <p>Номер телефона успешно изменен!</p>\r\n      <DefaultBtn\r\n        name=\"Вернуться к редактированию профиля\"\r\n        type=\"primary\"\r\n        color=\"brown\"\r\n        size=\"small\"\r\n        @click=\"pushEdit\"\r\n      />\r\n    </div>\r\n  </div> -->\r\n</template>\r\n\r\n<script setup lang=\"ts\">\r\nimport { ref } from \"vue\";\r\nimport InputPhone from \"~/components/ui/InputPhone.vue\";\r\nimport DefaultBtn from \"~/components/ui/DefaultBtn.vue\";\r\nimport otpPhone from \"./components/otp-phone.vue\";\r\nimport { useRouter } from \"vue-router\";\r\n\r\nconst phone = ref<string>(\"\");\r\nconst showOtp = ref<boolean>(false);\r\nconst phoneChanged = ref<boolean>(false);\r\n\r\nconst router = useRouter();\r\n\r\nconst handleConfirm = () => {\r\n  if (phone.value) {\r\n    showOtp.value = true;\r\n  }\r\n};\r\n\r\nconst handleOtpSuccess = () => {\r\n  // Логика обработки успешного ввода OTP\r\n  phoneChanged.value = true;\r\n};\r\n\r\nconst pushEdit = () => {\r\n  router.push(\"/profile/edit/\");\r\n};\r\n</script>\r\n\r\n<style scoped lang=\"scss\">\r\n.edit_phone__head {\r\n  max-width: 59.1rem;\r\n  margin: 0 auto 4.9rem auto;\r\n  text-align: center;\r\n  h3 {\r\n    font-size: 2.4rem;\r\n    margin-bottom: 2.5rem;\r\n  }\r\n}\r\n\r\n.edit_phone {\r\n  max-width: 55.9rem;\r\n  margin: 0 auto;\r\n  text-align: center;\r\n  .edit_input {\r\n    text-align: left;\r\n    margin-bottom: 4.5rem;\r\n\r\n    :deep(input) {\r\n      max-height: 4.8rem;\r\n    }\r\n  }\r\n}\r\n\r\n.edit_btn {\r\n  :deep(.button) {\r\n    padding: 1.2rem 7.5rem;\r\n  }\r\n}\r\n\r\n.edit_phone__end {\r\n  max-width: 47.2rem;\r\n  text-align: center;\r\n  margin: 0 auto;\r\n  padding-top: 5rem;\r\n  padding-bottom: 5rem;\r\n  p {\r\n    font-size: 2.4rem;\r\n    font-family: $font_2;\r\n    margin-bottom: 4.9rem;\r\n  }\r\n}\r\n</style>\r\n"],"version":3}